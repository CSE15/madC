<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/buckylayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hwy"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Apple">

    <Button
        android:id="@+id/firstaid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView"
        android:layout_marginTop="54dp"
        android:background="@android:color/transparent"
        android:onClick="onclickaid"
        android:text="FIRST AID KNOWLEDGE"
        android:tag="@string/strGreen"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/dailyhealth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/firstaid"
        android:layout_marginTop="54dp"
        android:background="@android:color/transparent"
        android:onClick="onclickaid"
        android:text="HEALTH TIPS"
        android:tag="@string/strBlue"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/bleh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/dailyhealth"
        android:layout_marginTop="54dp"
        android:background="@android:color/transparent"
        android:onClick="onclick"
        android:text="Apple"
        android:textAppearance="?android:attr/textAppearanceLarge" />  // go to this function over clicking

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="53dp"
        android:fontFamily="sans-serif-condensed"
        android:text="Welcome to Medicare"
        android:textAllCaps="false"
        android:textSize="36sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>